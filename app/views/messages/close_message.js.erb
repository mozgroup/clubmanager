$('#message-main').fadeAndRemove('fast', function() {
  <% if action_type == 'send' %>
    var aType = 'sent';
  <% else %>
    var aType = 'saved';
  <% end %>

  var msgTitle = 'Message ' + aType;
  var msgBody = 'Your message has been sucessfully ' + aType + '!';

  notify(msgTitle, msgBody, {
      hPos: 'center',
      icon: '<%= image_path 'img/demo/icon.png' %>',
  });
});

$('#message-panel').html("<%= escape_javascript(render(:partial => "close_panel")) %>");