<% provide(:current_calendar, " class='current'".html_safe) %>
<% provide(:title, "Calendar") %>

<% content_for :additional_styles do %>
  <%= stylesheet_link_tag "css/styles/calendars" %>
  <%= stylesheet_link_tag 'css/styles/form' %>
  <%= stylesheet_link_tag "css/styles/modal" %>
  <link rel="stylesheet" href="http://code.jquery.com/ui/1.8.21/themes/base/jquery-ui.css">
  <%= stylesheet_link_tag "calendar" %>
<% end %>

<div class="with-padding">

  <div class="mid-margin-bottom button-height">
    <%= link_to new_event_path(current_date: @current_date), id: 'new-event-btn', class: 'button' do %>
      <span class="button-icon blue-gradient"><span class="icon-star"></span></span>
      New Event
    <% end %>
  </div>

  <div id="calendar-body">
    <%= render 'calendar' %>
  </div>

  <div id="dialog-event" title="New Event">
    <div id="event-form">
    </div>
  </div>

  <div id="dialog-show-event" title="Show Event">
    <div id="show-event">
    </div>
  </div>

  <% content_for :template_functions do %>
    <script src="http://code.jquery.com/ui/1.8.23/jquery-ui.min.js" type="text/javascript"></script>
    <%= javascript_include_tag 'js/developr.calendar' %>
    <%= javascript_include_tag 'js/developr.modal' %>
    <%= javascript_include_tag 'calendar' %>
  <% end %>

</div>
