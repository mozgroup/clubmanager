<% provide(:current_calendar, " class='current'".html_safe) %>
<% provide(:title, "Calendar") %>

<% content_for :additional_styles do %>
  <%= stylesheet_link_tag "css/styles/calendars" %>
<% end %>

<table class="calendar fluid with-events">

  <!-- Month and scroll arrows -->
  <caption>
    <%= link_to '◄', calendar_path(current_date: @previous_month), class: 'cal-prev' %>
    <%= link_to '►', calendar_path(current_date: @next_month), class: 'cal-next' %>
    <%= @current_date.strftime('%B %Y') %>
  </caption>

  <!-- Day Names -->
  <thead>
    <tr>
      <th scope="col">Sun</th>
      <th scope="col">Mon</th>
      <th scope="col">Tue</th>
      <th scope="col">Wed</th>
      <th scope="col">Thu</th>
      <th scope="col">Fri</th>
      <th scope="col">Sat</th>
    </tr>
  </thead>

  <!-- Dates -->
  <tbody>
    <%= calendar(@current_date).html_safe %>
  </tbody>

</table>
<!-- End dates -->

<% content_for :template_functions do %>
  <%= javascript_include_tag 'js/developr.calendar' %>
<% end %>
