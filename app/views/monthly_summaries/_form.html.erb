<%= form_for(@monthly_summary) do |f| %>
  <% if @monthly_summary.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@monthly_summary.errors.count, "error") %> prohibited this monthly_summary from being saved:</h2>

      <ul>
      <% @monthly_summary.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :club_id %><br />
    <%= f.collection_select :club_id, Club.all, :id, :name, :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :month %><br />
    <%= f.date_select :month, use_month_name: true, start_year: 2012, order: [:year, :month], default: 1.month.from_now %>
  </div>
  <div class="field">
    <%= f.label :business_days_in_month %><br />
    <%= f.number_field :business_days_in_month %>
  </div>
  <div class="field">
    <%= f.label :membership_goal %><br />
    <%= f.text_field :membership_goal %>
  </div>
  <div class="field">
    <%= f.label :training_goal %><br />
    <%= f.text_field :training_goal %>
  </div>
  <div class="field">
    <%= f.label :juice_bar_goal %><br />
    <%= f.text_field :juice_bar_goal %>
  </div>
  <div class="field">
    <%= f.label :nursery_goal %><br />
    <%= f.text_field :nursery_goal %>
  </div>
  <div class="field">
    <%= f.label :membership_draft_expected %><br />
    <%= f.text_field :membership_draft_expected %>
  </div>
  <div class="field">
    <%= f.label :training_draft_expected %><br />
    <%= f.text_field :training_draft_expected %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
