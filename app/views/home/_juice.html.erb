<!-- Juice Bar Block -->
<div class="new-row six-columns">

  <div class="block">
    <div class="block-title">
      <h3>Juice Bar</h3>
      <div class="button-group absolute-right compact">
        <%= link_to '', '#', class: "button icon-left" %>
        <%= link_to 'Today', '#', class: 'button' %>
        <%= link_to '', '#', class: 'button icon-right' %>
      </div>
    </div>

    <div class="with-mid-padding">

      <div class="columns">

        <div class="six-columns">

          <div id="juice-chart"></div>

        </div>

        <div class="six-columns">

          <div class="columns">
            <div class="twelve-columns no-margin-bottom">
              <%= link_to "More", '#', class: 'button blue-gradient margin-right float-right' %>
            </div>
            <div class="twelve-columns new-row">
              <strong>Juice Bar</strong>
              <table width="100%">
                <tr>
                  <td>Cash to Date</td>
                  <td class="align-right">$20,000</td>
                </tr>
                <tr>
                  <td>Projected</td>
                  <td class="align-right">$35,000</td>
                </tr>
                <tr>
                  <td>Goal</td>
                  <td class="align-right green"><strong>$50,000</strong></td>
                </tr>
                <tr>
                  <td>Over/Under</td>
                  <td class="align-right red"><strong>-$15,000</strong></td>
                </tr>
              </table>
            </div>
          </div>

        </div>

        <div class="new-line twelve-columns margin-left padding-right">

          <h4 class="no-margin-bottom">Juice Bar Daily Averages</h4>
          <table width="98%">
            <tr>
              <td>Actual Daily Average</td>
              <td class="align-right">$1,000</td>
            </tr>
            <tr>
              <td>Daily Goal Average</td>
              <td class="align-right">$800</td>
            </tr>
            <tr>
              <td>Daily Needed to reach Monthly Goal</td>
              <td class="align-right red"><strong>$1,200</strong></td>
            </tr>
          </table>

        </div>

      </div>

    </div>

  </div>
  
</div>


<% content_for :additional_javascript do %>
  <script type="text/javascript">

      function drawJGauge() {
        jGaugeData = google.visualization.arrayToDataTable([
            ['Label', 'Value'],
            ['', 70],
        ]);

        jGauge = new google.visualization.Gauge(document.getElementById('juice-chart'));

        jGauge.draw(jGaugeData, gaugeOptions);
      }

      google.setOnLoadCallback(drawJGauge);

  </script>
<% end %>