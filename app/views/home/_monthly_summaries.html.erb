<div class="dashboard">

  <div class="columns">

    <div class="four-columns align-center">
      <strong>
        Today's Date: <span class="orange"><%= Date.current.strftime('%m/%d/%Y') %></span>
      </strong>
    </div>

    <div class="four-columns align-center">
      <strong>
        Business Days In Month: <span class="orange">30</span>
      </strong>
    </div>

    <div class="four-columns align-center">
      <strong>
        Business Days Completed: <span class="orange">10</span>
      </strong>
    </div>

  </div>

    <div class="standard-tabs">

      <!-- Tabs -->
      <ul class="tabs">
        <%= render partial: 'club_tab', collection: @clubs %>
      </ul>

      <!-- Content -->
      <div class="tabs-content">

        <%= render partial: 'tab_content', collection: @clubs %>

      </div>

    </div>

</div>