<!-- Training Block -->
<div class="six-columns">

  <div class="block">
    <div class="block-title">
      <h3>Training</h3>
      <div class="button-group absolute-right compact">
        <%= link_to '', '#', class: "button icon-left" %>
        <%= link_to 'Today', '#', class: 'button' %>
        <%= link_to '', '#', class: 'button icon-right' %>
      </div>
    </div>

    <div class="with-mid-padding">

      <div class="columns">

        <div class="six-columns">

          <div id="training-chart"></div>

        </div>

        <div class="six-columns">

          <div class="columns">
            <div class="twelve-columns no-margin-bottom">
              <%= link_to "More", '#', class: 'button blue-gradient margin-right float-right' %>
            </div>
            <div class="twelve-columns new-row">
              <strong>Personal Training</strong>
              <table width="100%">
                <tr>
                  <td>Cash to Date</td>
                  <td class="align-right">$20,000</td>
                </tr>
                <tr>
                  <td>Projected</td>
                  <td class="align-right">$35,000</td>
                </tr>
                <tr>
                  <td>Goal</td>
                  <td class="align-right green"><strong><%= format_currency(summary.training_goal) %></strong></td>
                </tr>
                <tr>
                  <td>Over/Under</td>
                  <td class="align-right red"><strong>-$15,000</strong></td>
                </tr>
              </table>
            </div>
          </div>

        </div>


      </div>

    </div>

  </div>

</div>


<% content_for :additional_javascript do %>
  <script type="text/javascript">

      function drawTGauge() {
        tGaugeData = google.visualization.arrayToDataTable([
            ['Label', 'Value'],
            ['', 70],
        ]);

        tGauge = new google.visualization.Gauge(document.getElementById('training-chart'));

        tGauge.draw(tGaugeData, gaugeOptions);
      }

      google.setOnLoadCallback(drawTGauge);

  </script>
<% end %>