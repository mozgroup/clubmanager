<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <p class="big-message red-gradient">
      <a href="#" title="Hide message" class="close show-on-parent-hover">x</a>
      <span class="big-message-icon icon-info"></span>
      <strong><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</strong><br />
      <% @event.errors.full_messages.each do |msg| %>
        <%= msg %><br />
      <% end %>
    </p>
  <% end %>

  <%= f.hidden_field :user_id %>
  <%= hidden_field_tag 'current_date', @current_date %>

  <p class="button-height block-label">
    <%= f.label :invitee_list, class: 'label' do %>
      <small>optional</small>
      Attendees
    <% end %>
    <%= f.text_field :invitee_list, class: 'input full-width' %>
  </p>
  <p class="button-height block-label">
    <%= f.label :subject, class: 'label' do %>
      Subject
    <% end %>
    <%= f.text_field :subject, class: 'input full-width' %>
  </p>
  <p class="button-height block-label">
    <%= f.label :location, class: 'label' do %>
      Location
    <% end %>
    <%= f.text_field :location, class: 'input full-width' %>
  </p>
  <p class="button-height block-label">
    <%= f.label :description, class: 'label' do %>
      Description
    <% end %>
    <%= f.text_area :description, class: 'input full-width', rows: '5' %>
  </p>
  <p class="button-height block-label">
    <%= f.label :start_at, class: 'label' do %>
      Start at
    <% end %>
    <%= f.datetime_select :start_at, { ampm: true }, { class: 'select' } %>
  </p>
  <p class="button-height block-label">
  <%= f.label :end_at, class: 'label' do %>
      End at
    <% end %>
    <%= f.datetime_select :end_at, { ampm: true }, { class: 'select' } %>
  </p>

  <div class="large-margin-top">
    <%= button_tag class: 'button green-gradient glossy big full-width' do %>
      Save Event
    <% end %>
  </div>
<% end %>
