<% content_for :additional_styles do %>
  <%= stylesheet_link_tag "css/styles/form" %>
  <%= stylesheet_link_tag "css/styles/switches" %>
  <%= stylesheet_link_tag "css/login" %>
<% end %>

<div id="container">

  <hgroup id="login-title" class="large-margin-bottom">
    <h1 class="login-title-image">Club Manager - Change Password</h1>
    <h5>&copy; Club Manager - Change Password</h5>
  </hgroup>


  <% flash.each do |key, value| %>
        <%= content_tag(:p, class: "message red-gradient") do %>
          <span class="block-arrow"><span></span></span>
          <a href="#" title="Hide message" class="close show-on-parent-hover">âœ•</a>
          <%= value %>
        <% end %>
    <% end %>

  <div id="form-block" class="scratch-metal">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, id: "form-login", class: "input-wrapper orange-gradient glossy" }) do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <p class="message">
      Change your password
      <span class="block-arrow"><span></span></span>
      </p>

      <ul class="inputs black-input large">
      <li><span class="icon-mail mid-margin-right"></span><%= f.password_field :password, class: "input-unstyled", placeholder: 'New Password', autocomplete: 'off' %></li>
      <li><span class="icon-mail mid-margin-right"></span><%= f.password_field :password_confirmation, class: "input-unstyled", placeholder: 'Confirm Password', autocomplete: 'off' %></li>
      </ul>

      <button type="submit" class="button glossy full-width" id="change-password">Change my password</button>
    <% end %>
  </div>

  <div class="margin-top white">
    <%= link_to "Sign in", new_session_path(resource_name), class: "white" %>
  </div>

</div>

<% content_for :template_functions do %>
  <%= javascript_include_tag 'session/signin' %>
<% end %>

